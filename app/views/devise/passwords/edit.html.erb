<div class="container-login">
  <h1><%= t('.change_your_password') %></h1>
  
  <%= form_with model: @user, url: user_password_path, method: :patch, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <%= f.hidden_field :reset_password_token %>
  
    <div class="form-group">
      <%= f.label :password, t('.new_password') %>
      <%= f.password_field :password, autofocus: true,
                                      class: 'form-control',
                                      required: true,
                                      minlength: @minimum_password_length,
                                      maxlength: '20' %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation, t('.confirm_new_password') %>
      <%= f.password_field :password_confirmation, autocomplete: 'off',
                                                   class: 'form-control',
                                                   required: true,
                                                   minlength:
                                                   @minimum_password_length,
                                                   maxlength: '20' %>
    </div>
  
    <div class="form-group">
      <%= f.submit t('.change_my_password'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
  
  <%= render 'devise/shared/links' %>
</div>
