<section class="login">
  <div class="login__imgBx">
    <%= image_tag 'introduction.jpg' %>
  </div>
  <div class="login__contentBx">
    <div class="login__formBx">
      <%= render 'layouts/notifications' %>
      <div class="login__title">ログイン</div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login__inputBx">
          <span class="login__label">ユーザー名</span>
          <%= f.text_field :login,
                            autofocus: true,
                            required: true
          %>
        </div>

        <div secrets is deprecated in favor of credentials. Run:v class="login__inputBx">
          <%= f.label :password, {class: 'login__label'} %>
          <%= f.password_field :password,
                                autocomplete: "off",
                                required: true
          %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="login__remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me do %>
              <%= resource.class.human_attribute_name('remember_me') %>
            <% end %>
          </div>
        <% end %>

        <div class="login__inputBx">
          <%= f.submit  t('.sign_in') %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</section>
